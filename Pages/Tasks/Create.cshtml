@page
@model TaskManagement.Pages.Tasks.CreateModel
@{
    ViewData["Title"] = "Create New Task";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="card-title mb-0">Create New Task</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Task.Title" class="form-label">Title</label>
                            <input asp-for="Task.Title" class="form-control" />
                            <span asp-validation-for="Task.Title" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Task.Description" class="form-label">Description</label>
                            <textarea asp-for="Task.Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Task.Description" class="text-danger"></span>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Task.Priority" class="form-label">Priority</label>
                                <select asp-for="Task.Priority" asp-items="Model.PriorityOptions" class="form-select"></select>
                                <span asp-validation-for="Task.Priority" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Task.DueDate" class="form-label">Due Date</label>
                                <input asp-for="Task.DueDate" class="form-control" type="date" />
                                <span asp-validation-for="Task.DueDate" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Task.Category" class="form-label">Category</label>
                                <input asp-for="Task.Category" class="form-control" placeholder="Work, Personal, etc." />
                                <span asp-validation-for="Task.Category" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Task.Tags" class="form-label">Tags</label>
                                <input asp-for="Task.Tags" class="form-control" placeholder="Comma-separated tags" />
                                <span asp-validation-for="Task.Tags" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="./Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Tasks
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Create Task
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 