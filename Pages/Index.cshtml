                <div class="task-content">Weekly Progress</div>
            </div>
            <div class="floating-task task-3">
                <div class="task-icon"><i class="bi bi-graph-up"></i></div>
                <div class="task-content">Performance Track</div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="features-section">
        <h2 class="section-title">Why Choose Our Task Management</h2>
        <div class="features-grid">
            <div class="feature-card animate-on-scroll">
                <div class="feature-icon">
                    <i class="bi bi-lightning-charge-fill"></i>
